<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/linearLayout"
    tools:context=".MainActivity">
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/Logo"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:layout_marginTop="150dp"
        android:fontFamily="cursive"
        android:gravity="left"
        android:layout_marginLeft="40sp"
        />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="20sp"
    android:layout_marginTop="15sp"
    android:textColor="@android:color/black"
    android:text="Login Issues Help"
    android:layout_marginLeft="40sp"
    />
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="15sp"
    android:layout_marginTop="15sp"
    android:textColor="@android:color/black"
    android:text="Forgot Password?"
    android:layout_marginLeft="40sp"
    />
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="13sp"
    android:layout_marginTop="10sp"
    android:textColor="@android:color/tertiary_text_dark"
    android:text="If you are a Assemble User and cannot remember your password."
    android:layout_marginLeft="40sp"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="40sp"
        android:text="Click here to reset your password"
        android:textColor="#1e90ff"
        android:id="@+id/reset"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:layout_marginLeft="40sp"
        android:text="Still Stucked?"
        android:textColor="@android:color/black"
        />
    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="40sp"
        android:text="Check your internet/network you are using. You can try it after sometime."
        android:textColor="@android:color/tertiary_text_dark"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="15sp"
            android:gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            >
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="45sp"
        android:layout_marginBottom="10dp"
        android:textColor="@android:color/white"
        android:id="@+id/gotIt"
        android:background="@drawable/button_design"
        android:text="GOT IT"
        />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>